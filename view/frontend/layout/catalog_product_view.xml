<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.media.image">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">DamConsultants_Widen::product/view/gallery.phtml</argument>
            </action>
        </referenceBlock>
       <referenceBlock name="product.info.details">
           <block class="Magento\Catalog\Block\Product\View" name="custom.tab" template="DamConsultants_Widen::product/view/widendoc_tab.phtml" group="detailed_info" >
               <arguments>
                   <argument translate="true" name="title" xsi:type="string">Document</argument>
                   <argument name="sort_order" xsi:type="string">100</argument>
               </arguments>
           </block>
       </referenceBlock>
    </body>
</page>